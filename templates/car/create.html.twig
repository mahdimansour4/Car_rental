{% extends 'admin/base_admin.html.twig' %}

{% block title %}Creation de Voiture{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                <div class="form-container">
                    <form action="{{ path('car.create') }}" method="post" enctype="multipart/form-data">
                        <label for="modele">Modele</label>
                        <input type="text" id="modele" name="modele">

                        <label for="couleur">Couleur</label>
                        <input type="text" id="couleur" name="couleur">

                        <label for="lieu">Lieu</label>
                        <input type="text" id="lieu" name="lieu">

                        <label for="marque">Marque</label>
                        <select id="marque" name="marque">
                            {% for marque in marques %}
                                <option value="{{ marque.id }}">{{ marque.nom }}</option>
                            {% endfor %}
                        </select>

                        <label for="categorie">Categorie</label>
                        <select id="categorie" name="categorie">
                            {% for categorie in categories %}
                                <option value="{{ categorie.id }}">{{ categorie.nom }}</option>
                            {% endfor %}
                        </select>

                        <label for="attributs">Attributs</label>
                        <input type="text" id="attributs" name="attributs">

                        <label for="prixParJour">Prix par jour</label>
                        <input type="number" id="prixParJour" name="prixParJour">

                        <label for="image">Image</label>
                        <label for="image" class="custom-file-upload">Choose File</label>
                        <input type="file" id="image" name="image" accept="image/*">

                        <button type="submit">Sauvegarder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container-fluid {
            padding: 20px;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }
        .form-container label {
            margin-top: 10px;
        }
        .form-container input[type="text"],
        .form-container input[type="number"],
        .form-container select {
            margin-top: 5px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 100%;
            cursor: text;
        }
        .form-container .custom-file-upload {
            cursor: pointer;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 100%;
            text-align: center;
            background-color: #f0f0f0;
        }
        .form-container button {
            margin-top: 20px;
            padding: 10px;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            font-family: 'Roboto', sans-serif;
        }
        .form-container button:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}
