{% extends 'admin/base_admin.html.twig' %}

{% block title %}Creer une categorie{% endblock %}

{% block admin_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="form-container">
                    <form action="{{ path('categorie.create') }}" method="post">
                        <label for="nom">Nom</label>
                        <input id="nom" type="text" name="nom">
                        <button type="submit">Ajouter</button>
                    </form>
                    <table class="categorie-table">
                        <thead>
                        <tr>
                            <th>Categories Existantes</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td>{{ categorie.nom }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container-fluid {
            padding: 20px;
        }

        .categorie-table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
            font-family: 'Roboto', sans-serif;
        }
        .categorie-table th,
        .categorie-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .categorie-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        .categorie-table tr:hover {
            background-color: #f5f5f5;
        }

        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            font-family: 'Roboto', sans-serif;
        }
        .form-container label {
            margin-top: 10px;
        }
        .form-container input[type="text"] {
            margin-top: 5px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: 100%;
            cursor: text;
        }
        .form-container button {
            margin-top: 20px;
            padding: 10px;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            font-family: 'Roboto', sans-serif;
        }
        .form-container button:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}
