{% extends 'base.html.twig' %}

{% block title %}Création de Réservation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        form label {
            font-weight: bold;
            margin-top: 10px;
        }
        form .form-control {
            margin-bottom: 15px;
        }
        form button {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            margin-top: 20px;
            width: 100%;
        }
        form button:hover {
            background-color: #0056b3;
            color: #fff;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Création de Réservation</h1>
        <form action="{{ path('reservation.create', {id: id}) }}" method="post">
            <div class="form-group">
                <label for="date_debut">Date de début</label>
                <input class="form-control" type="date" name="dateDebut" id="date_debut" required>
            </div>
            <div class="form-group">
                <label for="date_fin">Date de fin</label>
                <input class="form-control" type="date" name="dateFin" id="date_fin" required>
            </div>
            <div class="form-group">
                <label for="lieu_recup">Lieu de Récupération</label>
                <input class="form-control" type="text" id="lieu_recup" name="lieuRecup" required>
            </div>
            <div class="form-group">
                <label for="lieu_retour">Lieu de Retour</label>
                <input class="form-control" type="text" id="lieu_retour" name="lieuRetour" required>
            </div>
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
        </form>
    </div>
{% endblock %}
